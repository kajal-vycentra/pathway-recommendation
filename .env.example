# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Settings
DEBUG=false

# API Authentication (Required - Generate a secure key)
# Example: openssl rand -hex 32
API_KEY=your_secure_api_key_here

# PostgreSQL Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/logosreach

# Redis Configuration (for shared caching across workers)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=500

# AI API Retry Configuration
AI_MAX_RETRIES=3
AI_RETRY_DELAY=1.0

# Request Validation
MAX_ANSWER_LENGTH=1000
MAX_ANSWERS_COUNT=20
